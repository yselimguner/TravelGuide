@model TravelGuide.Models.Class.Comments
@{
    ViewBag.Title = "GetComments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Comments Update Page</h3>
<br />
@using (Html.BeginForm("UpdateComments", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.UserName)
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Comment)
    @Html.TextAreaFor(x => x.Comment, 10, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update Comment</button>
}

