@using TravelGuide.Models.Class
@model List<SocialMedia>

@{
    ViewBag.Title = "SocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<br />
<h2>Social Media Page</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Brand</th>
        <th>Link</th>
        <th>Icon</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Brand</td>
            <td>@x.Link</td>
            <td>@x.Icon</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Admin/GetSocialMedia/@x.Id">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Edit
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Admin/DeleteSocialMedia/@x.Id">
                    <i class="fas fa-trash">
                    </i>
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
<br />
<a class="btn btn-primary btn-sm" href="/Admin/AddSocialMedia">
    <i class="fas fa-folder">
    </i>
    Add New Social Media
</a>





