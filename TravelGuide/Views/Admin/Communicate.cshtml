
@using TravelGuide.Models.Class
@model List<Address>
@{
    ViewBag.Title = "Communicate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>Communicate Page</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Mail</th>
        <th>Location</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.Id</td>
    <td>@x.Title</td>
    <td>@x.Description</td>
    <td>@x.AddressWrite</td>
    <td>@x.PhoneNumber</td>
    <td>@x.Mail</td>
    <td>@x.Location</td>
    <td>
        <a class="btn btn-info btn-sm" href="/Admin/GetCommunicate/@x.Id">
            <i class="fas fa-pencil-alt">
            </i>
            Edit
        </a>
    </td>
    
</tr>
    }
</table>







