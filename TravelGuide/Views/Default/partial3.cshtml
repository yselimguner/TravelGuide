@using TravelGuide.Models.Class
@model List<Blog>
<div class="padding">
    <h4>Most Popular Top 10 Blogs</h4>
    <ul class="list list-pad">
        @{int i = 0;}
        @foreach (var x in Model)
        {
            <li class="list-bg"><span>@{i++;}@i.</span><a href="/Blog/BlogDetails/@x.Id">@x.Title</a></li>
        }

    </ul>
    <a href="/Blog/Index" class="link1">See all blogs</a>
</div>

