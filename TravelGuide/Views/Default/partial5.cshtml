@using TravelGuide.Models.Class
@model List<Blog>

<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <img src="@x.BlogImage" style="width:120px;" height="65px;" alt="" />
        </div>
            <div class="bot-desc">
                <p>@x.Description.Substring(0, 70) </p>
        </div>
        <div class="clear"></div>
    }


</div>
