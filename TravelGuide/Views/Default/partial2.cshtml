@using TravelGuide.Models.Class
@model List<Blog>

@foreach (var x in Model)
{

    <div class="right">
        <div class="bot-left">
             <img src="@x.BlogImage" style="width:300px; height:175px;"  alt="" />
         </div>
        <div class="left-text">

             <h4>@x.Title</h4>
             <span class="Date:">@x.Date.ToString("dd.MM.yyyy")</span>
             <p>@x.Description.Substring(0,200)</p>
             <p><a href="/Blog/BlogDetails/@x.Id"><span class="read">Read More >></span></a></p>
         </div>
    </div>
    //15'İNCİ DAKİKADA KALDIK 29uncu VİDEOOOOOOOOOO////-----------------
}